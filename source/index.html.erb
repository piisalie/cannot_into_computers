---
pageable: true
per_page: 10
---
<div class='articles'>
  <% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
  <% end %>

  <% page_articles.each_with_index do |article, i| %>
    <h2><%= link_to article.title, article %></h2><span><%= article.date.strftime('%b %e %Y') %></span>
    <%= article.summary(400) %>
    <hr>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  <% end %>
</div>
